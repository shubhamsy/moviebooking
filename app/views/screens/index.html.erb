        <td><%#= link_to 'Edit', edit_screen_path(screen) %></td>
        <td><%#= link_to 'Destroy', screen, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->


<script type="text/javascript">
  $(".book").click(function(){
      var mid = $(this).attr("movid");
      var sid = $(this).attr("shwid");
      var scid = $(this).attr("screnid");

      window.location.href = "/seats?movid="+mid+"&sid="+sid+"&scid="+scid;      
  });
</script>