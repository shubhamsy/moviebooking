<%= form_with(model: row, local: true) do |form| %>
  <% if row.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(row.errors.count, "error") %> prohibited this row from being saved:</h2>

      <ul>
      <% row.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :row_number %>
    <%= form.number_field :row_number %>
  </div>

  <div class="field">
    <%= form.label :seat %>
    <% @seat = Seat.all %>
    <%= select_tag "row[seat_id]", options_from_collection_for_select(@seat, "id", "seat_name"), :style => "width:20%", prompt: "Select Seat" %>
  </div>  

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
